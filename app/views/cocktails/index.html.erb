<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1586&q=80')">
  <div class="banner-content">
    <h1><strong>Cocktails we love</h1>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-light" %>
  </div>
</div>

<div class="cocktail-container">
     <% @cocktails.each do  |cocktail| %>
     <div class="cocktail-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= "https://source.unsplash.com/random?sig=#{rand(1..1000)}&?cocktail" %>)">
      <h2><%= link_to cocktail.name, cocktail_path(cocktail)%></h2>
    </div>
      <% end %>
  </div>



